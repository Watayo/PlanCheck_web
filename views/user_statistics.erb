  <% @user_tasks.each do |user_task| %>
    <div class="post-log">
      <div class="left-content">
        <a href="/task_log/<%= user_task.id %>"><%= user_task.name %></a>
        <form action="/task_delete/<%= user_task.id %>" method="post">
          <input type="submit" value="Delete" style="width: 100px; height: 70px;">
        </form>
      </div>
    </div>
  <% end %>
</section>